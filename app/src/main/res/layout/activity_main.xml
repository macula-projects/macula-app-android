<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>
    <Switch
            android:text="@string/bbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="412dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="164dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="292dp" android:layout_marginEnd="165dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="155dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="168dp" android:layout_marginTop="229dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="79dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>

</android.support.constraint.ConstraintLayout>